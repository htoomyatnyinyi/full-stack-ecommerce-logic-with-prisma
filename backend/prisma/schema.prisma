datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Product {
  id        Int     @id @default(autoincrement())
  name      String
  price     Float
  cartItems CartItem[]
}

model CartItem {
  id        Int    @id @default(autoincrement())
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
}
